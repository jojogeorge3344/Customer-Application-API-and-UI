@{
    ViewData["Title"] = "Home Page";
}

<div>
    <a class="text-center">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Create">Add Customer</a>
        </div>
        <table class="table table-responsive bg-light">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Mobile</td>
                    <td>Email</td>                   
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Customer)
                {
                    <tr>
                        <td>@item.FirstName </td>
                        <td>@item.LastName</td>
                        <td>@item.Mobile</td>
                        <td>@item.Email</td>                       
                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@item.id">Edit</a></td>
                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
</div>